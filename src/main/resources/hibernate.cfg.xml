<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 4.3//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-4.0.dtd">

<hibernate-configuration>
	<session-factory>
				<!-- DataSource connection setting -->
		<property name="hibernate.connection.datasource">java:comp/env/jdbc/OnlineTestExamDS</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hbm2ddl.auto">update</property>
	</session-factory>
</hibernate-configuration>